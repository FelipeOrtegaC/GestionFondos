<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:background="@drawable/degradado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/returnButton"
                android:layout_width="123dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/returnhome" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/logo"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="100dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:textSize="16dp"
            android:textColor="@color/golden"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registername" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/plaintexttwo"
            android:ems="10"
            android:inputType="text"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registername" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="@color/golden"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registermail" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/plaintexttwo"
            android:ems="10"
            android:inputType="text"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registermail" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="@color/golden"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registerpass" />

        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/plaintexttwo"
            android:ems="10"
            android:inputType="text"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registerpass" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="@color/golden"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registerconf" />

        <EditText
            android:id="@+id/editTextText6"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/plaintexttwo"
            android:ems="10"
            android:inputType="text"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/neuemachinaregular"
            android:text="@string/registerconf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:background="@color/golden"
            >

            <View
                android:id="@+id/view2"
                android:layout_width="59dp"
                android:layout_height="48dp"
                android:background="@drawable/registerbtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/succesfulButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/golden"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/neuemachinaultrabold"
                android:text="@string/btnreturn" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>